        ],
        "responses": {
          "200": {
            "description": "Invoice in PDF",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid UUID or token"
          },
          "401": {
            "description": "Unauthorized - invalid token"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    },
