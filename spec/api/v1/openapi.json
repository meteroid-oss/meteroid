        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "customer_id",
                "customer_name",
                "billing_day",
                "tenant_id",
                "currency"
              ],
              "properties": {
                "billing_day": {
                  "type": "integer",
                  "format": "int32"
                },
                "currency": {
                  "type": "string"
                },
                "customer_alias": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "customer_id": {
                  "type": "string",
                  "format": "uuid"
                },
                "customer_name": {
                  "type": "string"
                },
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "tenant_id": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          },
          "offset": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "total": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          }
        }
      },
      "Subscription": {
        "type": "object",
        "required": [
          "id",
          "customer_id",
          "customer_name",
          "billing_day",
          "tenant_id",
          "currency"
        ],
        "properties": {
          "billing_day": {
            "type": "integer",
            "format": "int32"
          },
          "currency": {
            "type": "string"
          },
          "customer_alias": {
            "type": [
              "string",
              "null"
            ]
          },
          "customer_id": {
            "type": "string",
            "format": "uuid"
          },
          "customer_name": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tenant_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    },
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "in": "header",
        "name": "apikey"
      }
    }
