{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "umd/**", "build/**", ".next/**", "storybook-static/**"]
    },

    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "start": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "web-api#*": {
      "env": ["KRATOS_PUBLIC_URL"]
    }
  }
}
